<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp">
    <ImageButton
        android:id="@+id/mapIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/photo_maps"
        android:background="@null"
        />
    <ImageButton
        android:id="@+id/galleryIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/photo_gallery"
        android:background="@null"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mapSearchBars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp">
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="가게 이름 혹은 주소를 입력하세요"/>
        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/galleryBars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp">
    <Button
        android:id="@+id/galleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        />
    <Button
        android:id="@+id/predictButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predict" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="248dp"
        android:layout_height="263dp"
        android:scaleType="fitXY"
        android:src="@drawable/d"
        android:contentDescription="image to predict"
        />

    <TextView
        android:id="@+id/predictResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Hello World!"
        android:textSize="20sp" />

</LinearLayout>